<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轨迹名称" />

        <EditText
            android:id="@+id/et_track_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述" />

        <EditText
            android:id="@+id/et_track_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入描述内容"
            android:maxLength="200" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_track_edit_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_selector_common"
            android:gravity="center"
            android:text="查看"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_track_edit_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_selector_common"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>