<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/btn_point_add"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/add_captain_command"/>

    <ImageView
        android:id="@+id/btn_center"
        android:layout_width="31dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_plan_point"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/interest_sound_play"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_map_mode"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_menu_mapmode" />

        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/osm_ic_center_map" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_zoom_in"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/zoom_in" />

        <ImageView
            android:id="@+id/btn_zoom_out"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/zoom_out" />
    </LinearLayout>
</RelativeLayout>
