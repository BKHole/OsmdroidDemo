<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_map_source"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/btn_map_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_map_mode"
        android:scaleType="centerInside"
        android:src="@drawable/ic_map_google"/>

    <View
        android:id="@+id/divider_map_mode"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/blue"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_add_offline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:text="添加"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_map_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>